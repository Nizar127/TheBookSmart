<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusinessActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="List Your Business With Us"
        android:textSize="24sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/bizName"
        android:layout_width="125dp"
        android:layout_height="34dp"
        android:text="Business Name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="174dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/editDetails"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="text"
        android:text="Details" />

    <TextView
        android:id="@+id/bizDetails"
        android:layout_width="139dp"
        android:layout_height="35dp"
        android:text="Details"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/MainProduct"
        android:layout_width="127dp"
        android:layout_height="27dp"
        android:text="Main Product"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editProduct"
        android:layout_width="171dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="product" />

    <TextView
        android:id="@+id/keywordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Keyword"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editKeyword"
        android:layout_width="174dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="keyword" />

    <TextView
        android:id="@+id/CategoryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="385dp"
        android:layout_height="43dp"
        android:background="@color/colorAccent"
        android:text="Business Form" />

    <Button
        android:id="@+id/listBiz_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/colorSecondary"
        android:onClick="formInsert"
        android:text="List My Business" />

</RelativeLayout>